<body>
    <div>
        <form asp-action="ProfileEdit" method="post">
            <div class="form-group">
                <label for="regName">
                    Введите Новое Имя
                </label>
                <input type="text" name="userName" class="form-control" id="regName" placeholder="Enter name" />
            </div>
            <div class="form-group">
                <label for="regSurname">
                    Введите новую Фамилию
                </label>
                <input type="text" name="userSurname" class="form-control" id="regSurname" placeholder="Enter surname" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
        <form asp-action="ProfileEditPassword" method="post">
            <div class="form-group">
                <label for="oldPass">
                    Введите свой старый Пароль
                </label>
                <input type="password" name="OldPassword" class="form-control" id="oldPass" placeholder="Old" />
            </div>
            <div class="form-group">
                <label for="newPass">
                    Введите новый Пароль
                </label>
                <input type="password" name="NewPassword" class="form-control" id="newPass" placeholder="New" />
            </div>
            <div class="form-group">
                <label for="confNewPass">
                    Введите новый Пароль
                </label>
                <input type="password" name="ConfirmPassword" class="form-control" id="confNewPass" placeholder="Confirm New" />
            </div>
            <div class="form-group">
                <input type="submit" value="Update Password" class="btn btn-primary" />
            </div>
        </form>
        <form asp-action="UploadImage" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <h5>New Avatar</h5>
                <input type="file" name="image" accept="image/jpeg,image/png,image/jpg" class="form-control-filr mt-1" id="newAvatar">
            </div>
            <div class="form-group">
                <input type="submit" value="Update Avatar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</body>
